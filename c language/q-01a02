#include <stdio.h>

int main() {
    char name[50];
    int age;
    char department[50];
    char college[50];
    char temp;

    // Input
    printf("Enter your name: "); 
    fgets(name, sizeof(name), stdin);

    printf("Enter your age: ");
    scanf("%d", &age);
    scanf("%c", &temp);  // Clear the input buffer

    printf("Enter your department: ");
    fgets(department, sizeof(department), stdin);

    printf("Enter your college name: ");
    fgets(college, sizeof(college), stdin);

    // Output
    printf("\n----- Student Basic Information -----\n");
    printf("Name       : %s", name);
    printf("Age        : %d\n", age);
    printf("Department : %s", department);
    printf("College    : %s", college);

    return 0;
}